{
  "name": "FoundIT Rails Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "connorshea.vscode-ruby-test-adapter",
        "rebornix.ruby",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "GitHub.copilot"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "ruby.useLanguageServer": true,
        "ruby.lint": {
          "rubocop": true
        },
        "ruby.format": "rubocop",
        "[ruby]": {
          "editor.defaultFormatter": "Shopify.ruby-lsp"
        }
      }
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "bundle install && yarn install && rails db:setup",
  "remoteUser": "vscode"
}
