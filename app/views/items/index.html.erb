<div class="max-w-2xl mx-auto bg-white border-2 border-black shadow-[5px_5px_0_#e21836] p-8 mt-10 ">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold mb-6">My Items</h1>
    <%= link_to 'New Item', new_item_path, class: 'bg-black text-white font-bold py-2 px-4  shadow-[3px_3px_0_#e21836] hover:bg-gray-800 transition-all duration-150' %>
  </div>
  
  <ul class="mt-6 divide-y divide-gray-200">
    <% @items.each do |item| %>
      <li class="flex justify-between items-center py-4 gap-6">
        <span class="flex-1">
          <%= link_to item.content.truncate(60), item, class: 'hover:underline' %>
        </span>
        <span class="flex-shrink-0">
          <% qrcode = RQRCode::QRCode.new(item_url(item)) %>
          <%= raw qrcode.as_svg(module_size: 3, standalone: true) %>
        </span>
        <span class="flex gap-2 flex-shrink-0">
          <%= link_to 'Edit', edit_item_path(item), class: 'bg-black text-white font-bold py-2 px-4  shadow-[3px_3px_0_#e21836] hover:bg-gray-800 transition-all duration-150' %>
          <%= button_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-600 text-white font-bold py-2 px-4  shadow-[3px_3px_0_#e21836] hover:bg-red-800 transition-all duration-150', form: { class: 'inline' } %>
        </span>
      </li>
    <% end %>
  </ul>
</div>
