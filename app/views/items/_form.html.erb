<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div class="mb-4 text-red-600">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :content, class: 'block mb-2 font-semibold' %>
    <%= form.text_area :content, class: 'w-full border border-black shadow-[2px_2px_0_#e21836] rounded px-3 py-2 focus:ring-2 focus:ring-black focus:border-black transition', rows: 5 %>
  </div>
  <div class="flex gap-4">
    <%= form.submit 'Save Item', class: 'bg-black text-white font-bold py-2 px-4 rounded shadow-[3px_3px_0_#e21836] hover:bg-gray-800 transition-all duration-150' %>
  </div>
<% end %>
