<header class="top-0 left-0 right-0 bg-white border-b-2 border-black w-full backdrop-blur">
  <div class="container mx-auto flex items-center gap-2 md:gap-4">
    <div class="flex-1 flex justify-start mt-2">
      <%= link_to (authenticated? ? authenticated_root_path : unauthenticated_root_path), class: "p-0 m-0" do %>
        <img src="/foundit_logo_camper_final.svg" alt="FoundIT Logo" width="120">
      <% end %>
    </div>
    <nav class="flex-1 flex justify-center gap-4 xl:gap-6 font-bold uppercase">
      <% if authenticated? %>
        <%= link_to 'Home', authenticated_root_path, class: 'text-gray-700 hover:text-gray-900' %>
        <%= link_to 'My Items', items_path, class: 'text-gray-700 hover:text-gray-900' %>
        <%= link_to 'Register Item', new_item_path, class: 'text-gray-700 hover:text-gray-900' %>
        <%= button_to 'Sign Out', session_path, method: :delete, class: 'text-red-600 hover:text-red-800 font-bold uppercase' %>
      <% else %>
        <%= link_to 'Sign In', new_session_path, class: 'text-gray-700 hover:text-gray-900' %>
        <%= link_to 'Register', new_registration_path, class: 'text-gray-700 hover:text-gray-900' %>
      <% end %>
    </nav>
  </div>
</header>    