<turbo-stream action="replace" target="found_it_form_<%= @item_view.id %>">
  <template>
    <div class="mt-8 p-4 bg-green-100 border border-green-400 rounded">
      Thank you for letting us know you found this item!
      <% if @item_view.found_it_message.present? %>
        <br>
        <span class="block mt-2 text-gray-700">Your message: <%= @item_view.found_it_message %></span>
      <% end %>
    </div>
  </template>
</turbo-stream>
